{
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
	],
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./",
		"moduleResolution": "node10",
		"baseUrl": "./",
		"paths": {
			"Src/*": [
				"./src*"
			],
			"Tests/*": [
				"./tests*"
			]
		},
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}